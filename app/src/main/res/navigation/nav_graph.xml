<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.itis.summerpractice.HomeFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/nav_from_home_to_first"
            app:destination="@id/firstFragment" />
    </fragment>

    <fragment
        android:id="@+id/navigation_cart"
        android:name="com.itis.summerpractice.CartFragment"
        android:label="Cart"
        tools:layout="@layout/fragment_cart" >
        <action
            android:id="@+id/nav_from_cart_to_third"
            app:destination="@id/thirdFragment" />
    </fragment>

    <fragment
        android:id="@+id/navigation_gallery"
        android:name="com.itis.summerpractice.GalleryFragment"
        android:label="Gallery"
        tools:layout="@layout/fragment_gallery" >
        <action
            android:id="@+id/nav_from_gallery_to_fourth"
            app:destination="@id/fourthFragment" />
    </fragment>

    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.itis.summerpractice.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings" >
        <action
            android:id="@+id/nav_from_settings_to_second"
            app:destination="@id/secondFragment" />
    </fragment>

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.itis.summerpractice.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" >
        <action
            android:id="@+id/nav_from_notifications_to_fifth"
            app:destination="@id/fifthFragment" />
    </fragment>
    <fragment
        android:id="@+id/firstFragment"
        android:name="com.itis.summerpractice.FirstFragment"
        android:label="fragment_first"
        tools:layout="@layout/fragment_first" >
        <action
            android:id="@+id/nav_from_first_to_home"
            app:destination="@id/navigation_home" />
    </fragment>
    <fragment
        android:id="@+id/secondFragment"
        android:name="com.itis.summerpractice.SecondFragment"
        android:label="fragment_second"
        tools:layout="@layout/fragment_second" >
        <action
            android:id="@+id/nav_from_second_to_settings"
            app:destination="@id/navigation_settings" />
    </fragment>
    <fragment
        android:id="@+id/thirdFragment"
        android:name="com.itis.summerpractice.ThirdFragment"
        android:label="fragment_third"
        tools:layout="@layout/fragment_third" >
        <action
            android:id="@+id/nav_from_third_to_cart"
            app:destination="@id/navigation_cart" />
    </fragment>
    <fragment
        android:id="@+id/fourthFragment"
        android:name="com.itis.summerpractice.FourthFragment"
        android:label="fragment_fourth"
        tools:layout="@layout/fragment_fourth" >
        <action
            android:id="@+id/nav_from_fourth_to_gallery"
            app:destination="@id/navigation_gallery" />
    </fragment>
    <fragment
        android:id="@+id/fifthFragment"
        android:name="com.itis.summerpractice.FifthFragment"
        android:label="fragment_fifth"
        tools:layout="@layout/fragment_fifth" >
        <action
            android:id="@+id/nav_from_fifth_to_notifications"
            app:destination="@id/navigation_notifications" />
    </fragment>
</navigation>