<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.itis.summerpractice.HomeFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/nav_from_home"
            app:destination="@id/firstFragment" />
    </fragment>

    <fragment
        android:id="@+id/navigation_cart"
        android:name="com.itis.summerpractice.CartFragment"
        android:label="Cart"
        tools:layout="@layout/fragment_cart" >
        <action
            android:id="@+id/nav_from_cart"
            app:destination="@id/firstFragment" />
    </fragment>

    <fragment
        android:id="@+id/navigation_gallery"
        android:name="com.itis.summerpractice.GalleryFragment"
        android:label="Gallery"
        tools:layout="@layout/fragment_gallery" >
        <action
            android:id="@+id/nav_from_gallery"
            app:destination="@id/firstFragment" />
    </fragment>

    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.itis.summerpractice.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings" >
        <action
            android:id="@+id/nav_from_settings"
            app:destination="@id/firstFragment" />
    </fragment>

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.itis.summerpractice.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" >
        <action
            android:id="@+id/nav_from_notifications"
            app:destination="@id/firstFragment" />
    </fragment>
    <fragment
        android:id="@+id/firstFragment"
        android:name="com.itis.summerpractice.FirstFragment"
        android:label="Another fragment"
        tools:layout="@layout/fragment_first" />
</navigation>